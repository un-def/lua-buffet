root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.lua,*.moon,*.rockspec,.luacheckrc,.busted,config.ld}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[.travis.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
